<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - SultanSklep</title>

    <link rel="stylesheet" href="~/assets/css/global.css">
    <link rel="stylesheet" href="~/assets/css/header.css">
    <link rel="stylesheet" href="~/assets/css/footer.css">
    <link rel="stylesheet" href="~/assets/css/main_page.css">
    <link rel="stylesheet" href="~/assets/css/account.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>

    <header>
        <div id="navbar-container">
            <div class="container-fluid fixed-top px-0 top-and-navbar">
                <div class="top-bar text-center text-white row gx-0 align-items-center d-none d-lg-flex">
                    <p>Darmowa dostawa od 100 PLN</p>
                </div>

                <nav class="navbar-box">
                    <div class="logo">
                        <img src="~/assets/img/sultan-no-background.png" alt="Sultan Restaurant Logo">
                    </div>

                    <ul class="nav-links">
                        <li><a href="#">Wołowina</a></li>
                        <li><a href="#">Jagnięcina</a></li>
                        <li><a href="#">Przekąski</a></li>
                        <li><a href="#">Pieczywo</a></li>
                        <li class="dropdown dropdown-helper ">
                            <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#">Wszystkie</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Option 1</a>
                                <a class="dropdown-item" href="#">Option 2</a>
                                <a class="dropdown-item" href="#">Option 3</a>
                                <a class="dropdown-item" href="#">Option 4</a>
                                <a class="dropdown-item" href="#">Option 5</a>
                            </div>
                        </li>

                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="class="icons">
                            
                            <a >
                                @User.Identity.Name
                            </a>

                            @if (User.IsInRole("Admin"))
                            {
                                <a style="cursor: pointer" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                    <i class="fas fa-user"></i>
                                    <p style="display: inline-block; margin-left: 2px">Admin Panel</p>
                                </a>
                            }

                            @if (User.IsInRole("SuperModerator"))
                            {
                                <a style="cursor: pointer" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                    <i class="fas fa-user"></i>
                                    <p style="display: inline-block; margin-left: 2px">Idarəçi Paneli</p>
                                </a>
                            }

                            @if (User.IsInRole("Moderator"))
                            {
                                <a style="cursor: pointer" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                    <i class="fas fa-user"></i>
                                    <p style="display: inline-block; margin-left: 2px">Nəzarətçi Paneli</p>
                                </a>
                            }

                            @if (User.IsInRole("User"))
                            {
                                <a style="cursor: pointer" asp-controller="Account" asp-action="UserPage">
                                    <i class="fas fa-user"></i>
                                    <p style="display: inline-block; margin-left: 2px">Hesabım</p>
                                </a>
                            }



                            <a style="cursor: pointer" asp-controller="Account" asp-action="Logout" asp-route-ReturnUrl="@Context.Request.Path.Value" class="dropdown-item my-login-btn text-center">
                                <i class="bi bi-box-arrow-left"></i>
                                <p style="display: inline-block; margin-left: 2px">Çıxış</p>
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="icons">
                            <a href="../../account.html">
                                <i class="fas fa-user"></i>
                            </a>
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                    }
                    
                </nav>
            </div>
        </div>
    </header>
    <main>
        @RenderBody()
    </main>

    <!-- Placeholder for Footer -->
    <div id="footer-container">
        <footer class="footer">
            <div class="footer-left">
                <img src="~/assets/img/sultan-no-background.png" alt="Sultan Logo">
                <div class="footer-text">

                    <p>Najwyższej jakości <br> mięso prosto od <br> sprawdzonych dostawców. <br> Dziękujemy za zaufanie!</p>
                </div>
            </div>

            <div class="footer-links">
                <ul>
                    <li><a href="#">Sklep</a></li>
                    <li><a href="#">O nas</a></li>
                    <li><a href="#">Pomoc</a></li>
                </ul>
                <ul>
                    <li><a href="#">Mięsa</a></li>
                    <li><a href="#">Kontakt</a></li>
                    <li><a href="#">FAQ</a></li>
                </ul>
                <ul>
                    <li><a href="#">Kurczak</a></li>
                    <li><a href="#">Regulamin</a></li>
                </ul>
                <ul>
                    <li><a href="#">Napoje</a></li>
                    <li><a href="#">Polityka prywatności</a></li>
                </ul>
            </div>

            <div class="footer-right">
                <div class="social-icons">
                    <span>CONNECT WITH US</span>
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                </div>
                <div class="rozet-icons">
                    <svg width="89" height="102" viewBox="0 0 89 102" fill="none" xmlns="http://www.w3.org/2000/svg"
                         xmlns:xlink="http://www.w3.org/1999/xlink">
                        <rect width="89" height="102" fill="url(#pattern0_169_13)" />
                        <defs>
                            <pattern id="pattern0_169_13" patternContentUnits="objectBoundingBox" width="1" height="1">
                                <use xlink:href="#image0_169_13" transform="matrix(0.01 0 0 0.00872549 0 0.0637255)" />
                            </pattern>
                            <image id="image0_169_13" width="100" height="100"
                                   xlink:href="data:image/png;base64," />
                        </defs>
                    </svg>

                    <svg width="89" height="102" viewBox="0 0 89 102" fill="none" xmlns="http://www.w3.org/2000/svg"
                         xmlns:xlink="http://www.w3.org/1999/xlink">
                        <rect width="89" height="102" fill="url(#pattern0_169_12)" />
                        <defs>
                            <pattern id="pattern0_169_12" patternContentUnits="objectBoundingBox" width="1" height="1">
                                <use xlink:href="#image0_169_12" transform="matrix(0.01 0 0 0.00872549 0 0.0637255)" />
                            </pattern>
                            <image id="image0_169_12" width="100" height="100"
                                   xlink:href="data:image/png;base64," />
                        </defs>
                    </svg>
                </div>
            </div>
            <div class="copyright">
                <p>
                    <span class="sultan-bold">SultanSklep</span>
                    <span class="sultan-bold-all">
                        - All rights reserved created by <a href="https://wedevloop.com/Account/Login?ReturnUrl=%2F">Wedevloop</a>
                    </span>
                </p>
            </div>
        </footer>

    </div>

    <!-- Scripts -->
    <script src="~/assets/js/account.js"></script>
    <script src="https://kit.fontawesome.com/eb23b2d8dd.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>