@using SultanSklep.ViewModels.AccountViewModels
﻿
@model ResetPassViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Authentication";

}

<div class="logincontainer">
    <div class="forms-container">
        <div class="signin-signup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form method="post" class="sign-in-form">
                <h2 class="title">Reset Password</h2>

                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input asp-for="NewPassword" placeholder="Password" required>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input asp-for="ConfirmPassword" placeholder="Repeat Password" required>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <input type="submit" value="Reset" class="btn solid btn-danger">
            </form>
        </div>
    </div>

    <div class="panels-container">
        <div class="panel left-panel">


            <img src="~/assets/img/account/meatlog.png" class="image" alt="">
        </div>

    </div>
</div>
