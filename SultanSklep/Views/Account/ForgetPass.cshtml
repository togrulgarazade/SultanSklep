@using SultanSklep.ViewModels.AccountViewModels
﻿
@model ForgetPassViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Authentication";

}

<div class="logincontainer">
    <div class="forms-container">
        <div class="signin-signup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form method="post" class="sign-in-form">
                <h2 class="title">Forget Password</h2>
                <div class="input-field">
                    <i class="fas fa-envelope"></i>
                    <input asp-for="Email" placeholder="Email" required>
                </div>
                <input type="submit" asp-controller="Account" asp-action="ForgetPass" value="Reset" class="btn solid btn-danger">
            </form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form method="post" class="sign-up-form">
                <h2 class="title">Sign in</h2>
                <div class="input-field">
                    <i class="fas fa-envelope"></i>
                    <input asp-for="Email" placeholder="Email" required>
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input asp-for="Password" placeholder="Password" required>
                </div>
                <input asp-controller="Account" asp-action="Login" value="Login" class="btn solid btn-danger">

                <p class="social-text">Or Sign in with social platforms</p>
                <div class="social-media">
                    <a href="#" class="social-icon">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-google"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="panels-container">
        <div class="panel left-panel">
            <div class="content">
                <h3>Sign in</h3>
                <p>If you remember your password, log in now.</p>
                <button class="btn transparent" id="sign-up-btn">Sign in</button>
            </div>

            <img src="~/assets/img/account/meatlog.png" class="image" alt="">
        </div>

        <div class="panel right-panel">
            <div class="content">
                <h3>Forgot your password?</h3>
                <p>Go and reset your password.</p>
                <button class="btn transparent" id="sign-in-btn">Reset</button>
            </div>

            <!-- <img src="./assets/img/account/register.svg" class="image" alt=""> -->
            <img src="./assets/img/account/meatreg.png" class="image" alt="">
        </div>
    </div>
</div>
