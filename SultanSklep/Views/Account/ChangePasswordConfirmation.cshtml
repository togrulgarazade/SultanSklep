﻿@{
    Layout = null;

}

<!DOCTYPE html>
<!-- Created By CodingNepal -->
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Yeniləndi - ToG Shopping</title>
    <!-- My Error Css -->
    <link rel="stylesheet" href="~/assets/css/error.css">
    <!--    Bootstrap Icon CSS-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

</head>
<body>

    <div id="loadertop"></div>

    <div id="error-page">
        <div class="content">


@if (User.Identity.IsAuthenticated)
        {
            <h4 data-text="Hörmətli: @User.Identity.Name ! Şifrəniz yeniləndi.">
                Hörmətli: @User.Identity.Name ! Şifrəniz yeniləndi.
                </h4>
                <p>
                    <i style="color: green;" class="bi bi-check2-circle"></i> Yeni şifrənizi unutmayın !
                    </p>
                    <div class="btns">
                        <a asp-controller="Account" asp-action="User">Hesaba geri dön</a>
                        </div>
        }
        else
        {
                        <h4 data-text="Şifrəniz yeniləndi.">
                            Şifrəniz yeniləndi.
                            </h4>
                            <p>
                                <i style="color: green;" class="bi bi-check2-circle"></i> Yeni şifrəniz ilə hesabınıza daxil olun və alış-verişə davam edin !
                                </p>
                                <div class="btns">
                                    <a asp-controller="Account" asp-action="Login">Daxil ol</a>
                                    </div>
}

</div>
</div>

<script src="~/assets/js/script.js"></script>

</body>
</html>