@using SultanSklep.ViewModels.AccountViewModels
﻿
@model AccountViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Authentication";

}

<div class="logincontainer">
    <div class="forms-container">
        <div class="signin-signup">
            <div asp-validation-summary="ModelOnly"></div>
            <form method="post" class="sign-in-form">
                <h2 class="title">Sign in</h2>
                <div class="input-field">
                    <i class="fas fa-envelope"></i>
                    <input asp-for="Email" placeholder="Email" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input asp-for="Password" placeholder="Password" required>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button asp-controller="Account" asp-action="Login" class="btn solid btn-danger">Login</button>

                <p class="social-text">Or Sign in with social platforms</p>
                <div class="social-media">
                    <a href="#" class="social-icon">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-google"></i>
                    </a>
                </div>
            </form>

            <div asp-validation-summary="ModelOnly"></div>
            <form method="post" class="sign-up-form">
                <h2 class="title">Sign up</h2>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input asp-for="Name" placeholder="Name" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input asp-for="Surname" placeholder="Surname" required>
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="input-field">
                    <i class="fas fa-envelope"></i>
                    <input asp-for="Email" placeholder="Email" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-field">
                    <i class="fas fa-phone"></i>
                    <input asp-for="PhoneNumber" placeholder="Phone number" required>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input asp-for="Password" placeholder="Password" required>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button asp-controller="Account" asp-action="Register" type="submit" class="btn  btn-danger">Sign up</button>

                <p class="social-text">Or Sign up with social platforms</p>
                <div class="social-media">
                    <a href="#" class="social-icon">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-google"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="panels-container">
        <div class="panel left-panel">
            <div class="content">
                <h3>New here ?</h3>
                <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Voluptas rerum nulla eius?</p>
                <button class="btn transparent" id="sign-up-btn">Sign up</button>
            </div>

            <img src="~/assets/img/account/meatlog.png" class="image" alt="">
        </div>

        <div class="panel right-panel">
            <div class="content">
                <h3>One of us ?</h3>
                <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Voluptas rerum nulla eius?</p>
                <button class="btn transparent" id="sign-in-btn">Sign in</button>
            </div>

            <!-- <img src="~/assets/img/account/register.svg" class="image" alt=""> -->
            <img src="~/assets/img/account/meatreg.png" class="image" alt="">
        </div>
    </div>
</div>

