@model SultanSklep.Models.ProductOperation

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h2>Order Details</h2>

    <p><strong>Product:</strong> @Model.Product.ProductName</p>
    <p><strong>Price:</strong> @Model.Product.Price zł</p>
    <p><strong>Quantity:</strong> @Model.Product.Count</p>
    <p><strong>Address:</strong> @Model.Address.Street, @Model.Address.City</p>

    <p class="mt-3"><a href="/" class="btn btn-primary">Back to Home</a></p>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>