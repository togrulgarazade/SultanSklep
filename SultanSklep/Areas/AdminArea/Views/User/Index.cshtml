@model SultanSklep.ViewModels.AccountViewModels.UserViewModel
@{
    ViewData["Title"] = "Users";
    int count = 1;
}

<div class="container-fluid pt-5 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h6 class="mb-0">Users</h6>
                    <a class="btn btn-primary" asp-controller="User" asp-action="Create">+ Add New User</a>
                </div>

                <!-- Users Table -->
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.ApplicationUsers)
                            {
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>
                                        @if (user.EmailConfirmed)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <a class="btn btn-info btn-sm" asp-controller="User" asp-action="Details" asp-route-id="@user.Id">
                                            <i class="fas fa-eye"></i> Details
                                        </a>
                                        <a class="btn btn-warning btn-sm" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a class="btn btn-danger btn-sm" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
