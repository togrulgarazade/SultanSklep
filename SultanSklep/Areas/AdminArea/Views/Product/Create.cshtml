@model SultanSklep.ViewModels.Product.ProductViewModel

<h2>Yeni Məhsul Əlavə Et</h2>

<form asp-action="Create" asp-area="AdminArea" asp-controller="Product" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="ProductName">Məhsulun Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Təsviri</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Count">Say</label>
        <input type="number" asp-for="Count" class="form-control" />
        <span asp-validation-for="Count" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="CategoryId">Kateqoriya</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Photo">Şəkil</label>
        <input type="file" asp-for="Photo" class="form-control" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Əlavə Et</button>
</form>
