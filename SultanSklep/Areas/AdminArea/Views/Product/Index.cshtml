@model IEnumerable<SultanSklep.Models.Product>
@{
    ViewData["Title"] = "Mehsullar";



    int count = 1;
}


<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Məhsullar</h1>
    <p class="mb-4 d-flex justify-content-end">
        <a class="btn btn-primary" asp-controller="Product" asp-action="Create">Əlavə et</a>
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="input-group">

                <form method="get" asp-action="Index">
                    <div class="form-outline">
                        <input autocomplete="off" type="search" placeholder="Məhsullarda axtar..." value="@ViewData["SearchedProduct"]" name="productSearch" class="form-control" /> <a style="padding-left: 15px" asp-action="Index">Bütün məhsullar</a>


                    </div>

                </form>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Şəkil</th>
                            <th>Ad</th>
                            <th>Başlıq</th>
                            <th>Qiymət</th>
                            <th>Say</th>
                            <th>Category</th>
                            <th>Stockdadir</th>
                            <th>Əməliyyatlar</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@count</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Image))
                                {
                                    <img src="/@item.Image" alt="@item.ProductName" width="50" />
                                }
                            </td>
                            <td>@item.ProductName</td>
                            <td>@item.Description</td>
                            <td> @item.Price </td>

                            <td>@item.Count</td>

                            <td>@item.Category?.Name</td>
                            <td>
                                @if (item.IsAvailable)
                                {
                                    <p> True </p>
                                }
                                else
                                {
                                    <p>False</p>
                                }
                            </td>
                            <td>
                                <a class="btn btn-primary" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pencil"></i></a> <br /> <br />
                                <a class="btn btn-primary" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
                            </td>
                        </tr>

                            count++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
<!-- End of Main Content -->