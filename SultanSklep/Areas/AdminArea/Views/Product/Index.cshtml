@model IEnumerable<SultanSklep.Models.Product>
@{
    ViewData["Title"] = "Products";
    int count = 1;
}

<div class="container-fluid pt-5 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h6 class="mb-0">Products</h6>
                    <a class="btn btn-primary" asp-controller="Product" asp-action="Create">+ Add Product</a>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Photo</th>
                                <th scope="col">Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">Price</th>
                                <th scope="col">Count</th>
                                <th scope="col">Category</th>
                                <th scope="col">In Stock?</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Image))
                                        {
                                            <img src="/@item.Image" alt="@item.ProductName" width="50" />
                                        }
                                        else
                                        {
                                            <span>No Image</span>
                                        }
                                    </td>
                                    <td>@item.ProductName</td>
                                    <td>@item.Description</td>
                                    <td>@item.Price zl</td>
                                    <td>@item.Count</td>
                                    <td>@item.Category?.Name</td>
                                    <td>
                                        @if (item.IsAvailable)
                                        {
                                            <span class="badge bg-success">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">No</span>
                                        }
                                    </td>
                                    <td>
                                        <a class="btn btn-primary btn-sm" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a class="btn btn-danger btn-sm" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
