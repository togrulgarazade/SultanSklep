@model IEnumerable<SultanSklep.Models.Category>
@{
    ViewData["Title"] = "Categories";
    int count = 1;
}

<div class="container-fluid pt-5 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h6 class="mb-0">Categories</h6>
                    <a class="btn btn-primary" asp-controller="Category" asp-action="Create">+ Add Category</a>
                </div>

                <!-- Search Bar -->
                <div class="mb-3">
                    <form method="get" asp-action="Index" class="d-flex">
                        <input type="search" placeholder="Search categories..." value="@ViewData["SearchedCategory"]" name="categorySearch" class="form-control me-2" />
                        <a class="btn btn-secondary" asp-action="Index">All Categories</a>
                    </form>
                </div>

                <!-- Categories Table -->
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Name</td>
                                    <td>
                                        <a class="btn btn-primary btn-sm" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a class="btn btn-danger btn-sm" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
